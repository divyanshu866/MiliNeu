@model MiliNeu.Models.ViewModels.PagerVM<Product>

@{

    string imageBasePath = ViewData["ImageBasePath"].ToString();
}
<div class="page-title">
    <h1>SALE</h1>

</div>

@await Html.PartialAsync("_gallery", Model.Items)





<div class="pagination">
    @if (Model.CurrentPage > 1)
    {
        <a asp-action="Index" asp-route-pageNumber="1">First</a>
        <a asp-action="Index" asp-route-pageNumber="@(Model.CurrentPage - 1)">Previous</a>
    }

    @for (int i = 1; i <= Model.TotalPages; i++)
    {
        if (i == Model.CurrentPage)
        {
            <strong>@i</strong>
        }
        else
        {
            <a asp-action="Index" asp-route-pageNumber="@i">@i</a>
        }
    }

    @if (Model.CurrentPage < Model.TotalPages)
    {
        <a asp-action="Index" asp-route-pageNumber="@(Model.CurrentPage + 1)">Next</a>
        <a asp-action="Index" asp-route-pageNumber="@Model.TotalPages">Last</a>
    }
</div>
@await Html.PartialAsync("_Socials")
