                <html>
                <head>
                    <title>Select Size</title>
                    <style>
                        /* Style for the size selector container */
                        .size-selector {
                            display: flex;
                            justify-content: space-around;
                            align-items: center;
                            background-color: #ffffff;
                            padding: 10px;
                        }

                        /* Style for each individual size box */
                        .size-box {
                            width: 30px;
                            height: 30px;
                            border: 1px solid #333;
                            display: flex;
                            justify-content: center;
                            align-items: center;
                            cursor: pointer;
                            font-size: 14px;
                        }

                        /* Style for the selected size box */
                        .selected {
                            background-color: #875151; color: #f2f2f2;
                        }
                    </style>
                </head>
                <body>
                    <h4>Select Your Size:</h4>
                    <div class="size-selector mb-3">
                        <div class="size-box" id="sizeXS">XS</div>
                        <div class="size-box" id="sizeS">S</div>
                        <div class="size-box" id="sizeM">M</div>
                        <div class="size-box" id="sizeL">L</div>
                        <div class="size-box" id="sizeXL">XL</div>
                        <div class="size-box" id="sizeXXL">XXL</div>
                    </div>

                    <!-- Add a hidden field to store the selected size -->
                    <input type="hidden" id="selectedSize" name="selectedSize" value="" />
                    <script>
                        // JavaScript to handle the size selection
                        const sizeBoxes = document.querySelectorAll(".size-box");
                        let selectedSize = ""; // Variable to store the selected size
                        sizeBoxes.forEach(box => box.addEventListener("click", getSize));

                        function getSize(event) {
                            sizeBoxes.forEach(box => box.classList.remove("selected"));
                            event.target.classList.add("selected");

                            // Update the selectedSize variable
                            selectedSize = event.target.innerText;
                            document.getElementById("selectedSize").value = selectedSize;
                            console.log(selectedSize);
                            console.log(document.getElementById("selectedSize").value);
                            
                        }

                        function updateSelectedSize() {
                            // Set the selected size in the hidden field
                            console.log("wd");
                        }
                    </script>
                    <div class="col-12 mb-3">
                        <a href="#" class="btn btn-primary col-12">Buy</a>
                    </div>

                    <div class="col-12 mb-3">
                        <a href="#" class="btn btn-success col-12" onclick="updateSelectedSize(); addToCart(@Model)">Add to Cart</a>
                    </div>
                </body>
            </html>




               
