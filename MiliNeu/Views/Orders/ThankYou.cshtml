@{
    ViewData["Title"] = "Thank You";
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background: linear-gradient(to bottom, #f8f9fa, #e9ecef);
    }
    .thank-you-container {
        text-align: center;
        background: #ffffff;
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        width: 100%;
    }
    .thank-you-container img {
        width: 100px;
        margin-bottom: 20px;
    }
    .thank-you-container h1 {
        font-size: 2rem;
        margin-bottom: 10px;
        color: #343a40;
    }
    .thank-you-container p {
        font-size: 1rem;
        margin-bottom: 20px;
        color: #6c757d;
    }
    .thank-you-container a {
        display: inline-block;
        margin-top: 20px;
        padding: 12px 25px;
        font-size: 1rem;
        text-decoration: none;
        background: #007bff;
        color: #ffffff;
        border-radius: 5px;
        transition: background 0.3s ease;
    }
    .thank-you-container a:hover {
        background: #0056b3;
    }
</style>

    <div class="thank-you-container">
        <img src="https://cdn-icons-png.flaticon.com/512/190/190411.png" alt="Thank You Icon">
        <h1>Thank You!</h1>
        <p>Your payment has been successfully processed. We appreciate your purchase.</p>
        <a href="/">Return to Home</a>
    </div>
